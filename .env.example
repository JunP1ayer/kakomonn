# MATURA Configuration
# Copy this file to .env and fill in your API keys

# Gemini API Key (Required)
# Get your key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Optional: GPT API Key for future features
OPENAI_API_KEY=your-openai-api-key-here

# Figma API Configuration (Required for design integration)
# Get your key from: https://www.figma.com/settings > Personal access tokens
# Required scope: File content (read)
FIGMA_API_KEY=your-figma-api-key-here

# Default Figma File ID Options:
# 1. Leave empty to disable Figma integration (will use fallback templates)
DEFAULT_FIGMA_FILE_ID=

# 2. Use a public community file (recommended for testing)
# DEFAULT_FIGMA_FILE_ID=hGTLJn3UWQPmyB6ns5Eo0k  # Google Material Design 3

# 3. Use your own file (must be shared with "Anyone with link can view")
# DEFAULT_FIGMA_FILE_ID=your-shared-file-id

# Optional: Development settings
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Optional: Vercel deployment settings
VERCEL_URL=your-app.vercel.app